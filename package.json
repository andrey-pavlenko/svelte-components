{
  "name": "@apsc/scope",
  "version": "0.0.1",
  "description": "A set of useful Svelte components",
  "main": "index.js",
  "scripts": {
    "dev:demo": "pnpm run dev -C demo",
    "build:demo": "pnpm run build -C demo",
    "package:tabs": "cd components/tabs && pnpm run package",
    "publish:tabs": "cd packages/tabs && pnpm publish --no-git-checks --access public",
    "package:glob-notify": "cd components/glob-notify && pnpm run package",
    "publish:glob-notify": "cd packages/glob-notify && pnpm publish --no-git-checks --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrey-pavlenko/svelte-components.git"
  },
  "keywords": [
    "svelte"
  ],
  "author": "Andrey Pavlenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrey-pavlenko/svelte-components/issues"
  },
  "homepage": "https://github.com/andrey-pavlenko/svelte-components#readme",
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "npe": "^1.2.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "^3.48.0",
    "typescript": "^4.6.4"
  }
}

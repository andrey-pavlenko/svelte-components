{
  "name": "@apsc/color",
  "description": "A set of Svelte components for picking and editing colors",
  "version": "0.0.4",
  "type": "module",
  "types": "index.d.ts",
  "main": "index.js",
  "svelte": "./index.js",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "cd ../../packages/color && prettier --plugin-search-dir . --write .",
    "finish:package": "cd ../../packages/color && npe devDependencies --delete &&  node ../../documetator/index.js .",
    "package": "pnpm run check && svelte-package && pnpm run finish:package",
    "changelog": "../../node_modules/.bin/conventional-changelog -p angular -i ../../packages/color/CHANGELOG.md -s --commit-path=.",
    "publish": "cd ../../packages/color && pnpm publish --no-git-checks --access public"
  },
  "author": "Andrey Pavlenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrey-pavlenko/svelte-components.git"
  },
  "bugs": {
    "url": "https://github.com/andrey-pavlenko/svelte-components/issues"
  },
  "keywords": [
    "svelte",
    "component",
    "color-picker",
    "color-edit"
  ],
  "homepage": "https://github.com/andrey-pavlenko/svelte-components/tree/main/packages/color#readme",
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "peerDependencies": {
    "svelte": "^3.30.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.2",
    "@sveltejs/kit": "^1.3.6",
    "@sveltejs/package": "^1.0.2",
    "@types/jest": "^29.4.0",
    "@types/lodash.debounce": "^4.0.7",
    "jest": "^29.4.1",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.0.4"
  }
}

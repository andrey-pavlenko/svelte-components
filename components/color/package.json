{
  "name": "@apsc/color",
  "description": "A set of Svelte components for picking and editing colors",
  "version": "0.0.3",
  "type": "module",
  "types": "index.d.ts",
  "main": "index.js",
  "svelte": "./index.js",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "finish:package": "cd ../../packages/color && npe devDependencies --delete &&  node ../../documetator/index.js .",
    "package": "pnpm run check && svelte-package && pnpm run finish:package",
    "changelog": "conventional-changelog -p angular -i src/lib/CHANGELOG.md -s --commit-path=.",
    "publish": "cd ../../packages/color && pnpm publish --no-git-checks --access public"
  },
  "author": "Andrey Pavlenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrey-pavlenko/svelte-components.git"
  },
  "bugs": {
    "url": "https://github.com/andrey-pavlenko/svelte-components/issues"
  },
  "keywords": [
    "svelte",
    "component",
    "color-picker",
    "color-edit"
  ],
  "homepage": "https://github.com/andrey-pavlenko/svelte-components/tree/main/packages/color#readme",
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "peerDependencies": {
    "svelte": "^3.50.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.0-next.80",
    "@sveltejs/kit": "^1.0.0-next.507",
    "@sveltejs/package": "^1.0.0-next.5",
    "@types/jest": "^27.5.2",
    "@types/lodash.debounce": "^4.0.7",
    "jest": "^28.1.3",
    "svelte": "^3.50.1",
    "svelte-check": "^2.9.1",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.4"
  },
  "exports": {
    ".": "./index.js"
  }
}
